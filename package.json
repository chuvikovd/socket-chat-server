{
  "name": "chat-server",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "node ./dist/server.js",
    "start:watch": "nodemon -e ts --exec 'tsc && yarn start'",
    "build": "tsc"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "husky": "^4.2.3",
    "lint-staged": "^10.1.2",
    "prettier": "^2.0.2",
    "winston": "^3.2.1",
    "ws": "^7.4.6",
    "yup": "^0.28.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.4",
    "@types/ws": "^7.2.3",
    "@types/yup": "^0.26.34",
    "nodemon": "^2.0.2",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,tsx,json}": [
      "prettier --write",
      "git add"
    ]
  }
}
